# Configuración para Google Cloud Run - Producción
# IMPORTANTE: Estas variables se configuran en Cloud Run, no en este archivo

# Configuración de Base de Datos (Cloud SQL)
POSTGRES_USER=inventory_user
POSTGRES_PASSWORD=CHANGE_THIS_IN_CLOUD_RUN
POSTGRES_HOST=/cloudsql/YOUR_PROJECT_ID:YOUR_REGION:YOUR_INSTANCE_NAME
POSTGRES_PORT=5432
POSTGRES_DB=inventory_db

# Configuración JWT (OBLIGATORIO cambiar en producción)
SECRET_KEY=CHANGE_THIS_SECRET_KEY_IN_PRODUCTION_MINIMUM_32_CHARACTERS_LONG
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Configuración de la App
APP_NAME=Inventory API
VERSION=2.0.0

# Variables específicas de Cloud Run
PORT=8080
INSTANCE_CONNECTION_NAME=YOUR_PROJECT_ID:YOUR_REGION:YOUR_INSTANCE_NAME